@model bool?
@{
    var selectList = new List<SelectListItem>();
    selectList.Add(new SelectListItem { Text = "Not Set", Value = String.Empty, Selected = !Model.HasValue });
    selectList.Add(new SelectListItem { Text = "Paid", Value = "true", Selected = Model.HasValue && Model.Value });
    selectList.Add(new SelectListItem { Text = "Not Paid", Value = "false", Selected = Model.HasValue && !Model.Value });}
@Html.DropDownListFor(m => m, selectList)
